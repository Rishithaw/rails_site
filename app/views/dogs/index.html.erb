<p style="color: green"><%= notice %></p>

<% content_for :title, "Dogs" %>

<h1>Dogs</h1>
<%= form_with url: dogs_path, method: :get, local: true do %>
  <div class="input-group mb-3">
    <%= text_field_tag :search, params[:search], placeholder: "Search dogs by name...", class: "form-control" %>
    <button class="btn btn-outline-secondary" type="submit">Search</button>
  </div>
<% end %>


<div id="dogs">
  <% @dogs.each do |dog| %>
    <%= render dog %>
    <p>
      <%= link_to "Show this dog", dog %>
    </p>
  <% end %>
</div>

<%= link_to "New dog", new_dog_path %>
