<p style="color: green"><%= notice %></p>

<% content_for :title, "Dogs" %>

<h1 class="mb-4 text-center">üê∂ Dogs</h1>

<!-- Hierarchical Search Form -->
<%= form_with url: dogs_path, method: :get, local: true do %>
  <div class="row g-2 mb-4">
    <div class="col-md-5">
      <%= text_field_tag :search, params[:search],
        placeholder: "Search dogs, owners, or breeds...",
        class: "form-control" %>
    </div>

    <div class="col-md-4">
      <%= select_tag :breed_id,
          options_from_collection_for_select(@breeds, :id, :name, params[:breed_id]),
          include_blank: "All Breeds",
          class: "form-select" %>
    </div>

    <div class="col-md-3 d-grid">
      <button class="btn btn-primary" type="submit">Search</button>
    </div>
  </div>
<% end %>

<%= link_to "Clear Filters", dogs_path, class: "btn btn-secondary mb-3" %>

<!-- Dog Results -->
<div class="row" id="dogs">
  <% if @dogs.any? %>
    <% @dogs.each do |dog| %>
      <div class="col-md-4 mb-4 d-flex justify-content-center">
        <div class="card h-100 shadow-sm" style="width: 18rem;">
          <% if dog.sub_breed&.images&.any? %>
            <%= image_tag(
                  dog.sub_breed.images.sample.url,
                  class: "card-img-top dog-image",
                  alt: dog.name
                ) %>
          <% else %>
            <%= image_tag(
                  "https://placehold.co/400x250?text=No+Image",
                  class: "card-img-top dog-image",
                  alt: "No image available"
                ) %>
          <% end %>

          <div class="card-body">
            <h5 class="card-title text-primary"><%= dog.name %></h5>
            <p class="card-text">
              <strong>Owner:</strong> <%= dog.owner.name %><br>
              <strong>Breed:</strong> <%= dog.sub_breed.breed.name %><br>
              <strong>Sub-Breed:</strong> <%= dog.sub_breed.name %>
            </p>
          </div>

          <div class="card-footer bg-transparent border-top-0">
            <%= link_to "Show this dog", dog, class: "btn btn-outline-primary btn-sm w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No results found.</p>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-4">
  <%= paginate @dogs %>
</div>
